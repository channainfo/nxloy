    "db:seed": "pnpm --filter @nxloy/database db:seed",
    "db:reset": "pnpm --filter @nxloy/database db:reset",
    "test": "nx test backend",
    "test:watch": "nx test backend --watch",
    "test:cov": "nx test backend --coverage",
    "test:e2e": "nx test backend --config=test/jest-e2e.json",
    "test:setup": "bash scripts/setup-test-db.sh",
    "test:all": "bash scripts/setup-test-db.sh && nx test backend && nx test backend --config=test/jest-e2e.json",
    "nx:reset": "npx nx reset",
    "nx:daemon:stop": "npx nx daemon --stop",
    "nx:daemon:start": "npx nx daemon --start",
    "nx:fix": "npx nx daemon --stop && rm -rf .nx/cache .nx/workspace-data && npx nx daemon --start",
    "nx:clean": "npx nx reset && rm -rf .nx/cache .nx/workspace-data"
  },
