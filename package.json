    "dev:backend": "nx serve backend",
    "dev:web": "nx serve web",
    "dev:mobile": "nx run mobile:start",
    "start:backend": "nx serve backend --configuration=production",
    "build:backend": "nx build backend",
    "build:web": "nx build web",
    "build:mobile": "nx build mobile",
    "redis:start": "redis-server",
    "redis:stop": "redis-cli shutdown",
    "redis:monitor": "redis-cli MONITOR",
    "queue:stats": "redis-cli KEYS 'bull:email:*'",
    "db:generate": "pnpm --filter @nxloy/database prisma:generate",
    "db:migrate": "pnpm --filter @nxloy/database prisma:migrate",
    "db:migrate:deploy": "pnpm --filter @nxloy/database prisma:migrate:deploy",
