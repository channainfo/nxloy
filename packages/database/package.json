{
  "name": "@nxloy/database",
  "version": "0.1.0",
  "description": "Centralized database package with Prisma ORM for NxLoy platform",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "prisma:generate": "dotenv -e ../../.env -- prisma generate",
    "prisma:migrate": "dotenv -e ../../.env -- prisma migrate dev",
    "prisma:migrate:deploy": "dotenv -e ../../.env -- prisma migrate deploy",
    "prisma:studio": "dotenv -e ../../.env -- prisma studio",
    "prisma:format": "dotenv -e ../../.env -- prisma format",
    "prisma:validate": "dotenv -e ../../.env -- prisma validate",
    "db:seed": "dotenv -e ../../.env -- tsx prisma/seed.ts",
    "db:reset": "dotenv -e ../../.env -- prisma migrate reset"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "dotenv-cli": "^11.0.0",
    "prisma": "^6.7.0",
    "tsx": "^4.19.2"
  },
  "prisma": {
    "schema": "prisma/schema"
  }
}
